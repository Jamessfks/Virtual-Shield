# ==================================
# API CONFIGURATION
# ==================================

# Reality Defender API Key (Current Provider)
# Get your API key from: https://realitydefender.com
REALITY_DEFENDER_API_KEY=your_api_key_here

# ==================================
# FUTURE API INTEGRATION PLACEHOLDER
# ==================================
# TODO: Replace with your custom API when ready
# CUSTOM_API_KEY=your_custom_api_key_here
# CUSTOM_API_URL=https://your-api-endpoint.com
# CUSTOM_API_TIMEOUT=30

# ==================================
# SERVER CONFIGURATION
# ==================================

# Flask server configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5001
FLASK_ENV=production
FLASK_DEBUG=false

# Enable/disable mock mode (for development/demo without API)
ENABLE_MOCK_MODE=false

# ==================================
# UPLOAD CONFIGURATION
# ==================================

# Maximum file size in MB
MAX_FILE_SIZE_MB=16

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,webp,bmp

# Upload folder path
UPLOAD_FOLDER=uploads

# ==================================
# SECURITY
# ==================================

# CORS allowed origins (comma-separated)
# Use * for development, specific domains for production
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# ==================================
# LOGGING
# ==================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (leave empty for console only)
LOG_FILE=

# ==================================
# MONITORING & ANALYTICS
# ==================================

# Enable performance monitoring
ENABLE_MONITORING=false

# Monitoring service endpoint (optional)
MONITORING_ENDPOINT=
